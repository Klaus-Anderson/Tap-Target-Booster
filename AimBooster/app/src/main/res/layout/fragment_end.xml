<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            style="@style/styleTheme"
            android:text="gameType"
            android:id="@+id/gameType"
            android:gravity="center|right"
            android:layout_gravity="center_horizontal" />
        <TextView
            style="@style/styleTheme"
            android:text="@string/game_over"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            style="@style/styleTheme"
            android:text="@string/score"
            android:id="@+id/accuracyType"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:gravity="center|right"
            android:layout_gravity="center"
            />
        <TextView
            style="@style/styleTheme"
            android:text="hmm"
            android:id="@+id/accuracyFinal"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center|right"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp" />
        <TextView
            style="@style/styleTheme"
            android:text="%"
            android:id="@+id/accuracyRate"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_gravity="end"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            style="@style/styleTheme"
            android:text="@string/targets"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:gravity="center|right"/>
        <TextView
            style="@style/styleTheme"
            android:text="@string/game_over"
            android:id="@+id/targetsFinal"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            style="@style/styleTheme"
            android:text="@string/target_size"
            android:id="@+id/targetRadiusTitle"
            android:layout_gravity="center_horizontal"
            android:gravity="center|right"/>
        <TextView
            style="@style/styleTheme"
            android:text="@string/game_over"
            android:id="@+id/targetRadius"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>