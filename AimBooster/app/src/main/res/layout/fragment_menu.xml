<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        style="@style/styleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:id="@+id/textView"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            style="@style/styleTheme"
            android:text="@string/twitch"
            android:id="@+id/twitchButton"/>

        <Button
            style="@style/styleTheme"
            android:text="@string/precision"
            android:id="@+id/precisionButton"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            style="@style/styleTheme"
            android:text="@string/time_challenge"
            android:clickable="false"
            android:textColor="@color/red"
            android:id="@+id/timeChallenge"/>

        <Button
            style="@style/styleTheme"
            android:text="@string/reaction"
            android:id="@+id/reactionButton"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            style="@style/styleTheme"
            android:text="@string/double_shot"
            android:id="@+id/doubleshotButton"
            android:clickable="false"
            android:textColor="@color/red"/>

        <Button
            style="@style/styleTheme"
            android:text="@string/speed"
            android:id="@+id/speedButton"
            android:clickable="false"
            android:textColor="@color/red"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            style="@style/styleTheme"
            android:text="@string/tracking"
            android:id="@+id/trackingButton"
            android:clickable="false"
            android:textColor="@color/red"/>

        <FrameLayout
            android:layout_weight="1"
            android:id="@+id/deckFrame"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <Button
                style="@style/styleTheme"
                android:text="@string/achievements"
                android:id="@+id/achievementsButton"
                android:layout_height="match_parent"
                android:clickable="true"
                android:visibility="gone"
                android:textColor="@color/black"
                android:focusable="true" />

            <!-- sign-in button -->
            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>
